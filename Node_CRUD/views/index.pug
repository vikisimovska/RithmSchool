extends base.pug

block content
  h2 Shopping List

  a(href="/items/new") Create new item
  br
  br
  h3 Listing all the items:
 
  ul
  each item in items

    li  #{item.name} | $ #{item.price} 
           a(href=`/items/${item.id}/edit`) Edit an item
    
    form(action=`/items/${item.id}?_method=DELETE` method="POST")
        input(type="submit" value= 'X')

   
