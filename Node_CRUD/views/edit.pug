extends base.pug

block content
    h2 Edit #{item.name}
    
    form(action=`/items/${item.id}?_method=PATCH` method="POST")
        input(type="text" name="name" value=`${item.name}`)                 
        input(type="text" name="price" value=`${item.price}`)
        input(type="submit" value="Edit Item")
